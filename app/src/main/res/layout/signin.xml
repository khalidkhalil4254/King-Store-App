<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

    <ImageView
            android:layout_width="193dp"
            android:layout_height="308dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.009"/>
    <Button
            android:text="signIn"
            android:layout_width="241dp"
            android:layout_height="49dp"
            android:id="@+id/signIn_signIn_btn"
            android:background="@drawable/bluebtndark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.824"/>
    <EditText
            android:paddingStart="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:inputType="text"
            android:hint=" Email"
            android:ems="10"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_mail_fill0_wght400_grad0_opsz48"
            android:id="@+id/username_signIn_txt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.515"/>
    <EditText
            android:paddingStart="8dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:hint=" Password"
            android:drawableStart="@drawable/ic_lock_fill0_wght400_grad0_opsz48"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/password_signIn_txt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.653"/>
    <TextView
            android:text="Username"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.455"/>
    <TextView
            android:text="Password"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.171"
            app:layout_constraintVertical_bias="0.59"/>
    <TextView
            android:text="SignIn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.383"/>
    <CheckBox
            android:text="Remember Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rememberMe_signIn_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintVertical_bias="0.725"/>
    <Button
            android:text="don't have account? SignUp"
            android:textColor="@color/white"
            android:background="@drawable/buttonwithoutcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signUp_signUp_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.929"/>
</androidx.constraintlayout.widget.ConstraintLayout>