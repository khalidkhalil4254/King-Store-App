<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:id="@+id/grandParent">

    <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/product_product_page_background">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="119dp"
                    android:alpha="0.1"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/product_details_container"
                    android:id="@+id/img5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="79dp"
                    android:layout_marginStart="-1dp"
                    android:layout_marginEnd="1dp"/>

            <TextView
                    android:text="productCate"
                    android:alpha="0.5"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/productCate_productPage_txt"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" android:layout_marginTop="162dp"
                    android:layout_marginStart="294dp"
                    android:layout_marginEnd="8dp"/>
            <RatingBar
                    android:id="@+id/productRate_productPage_rate"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:isIndicator="false"
                    android:max="1"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="145dp"
                    android:layout_marginStart="294dp"
                    android:layout_marginEnd="35dp"/>
            <TextView
                    android:gravity="center_horizontal"
                    android:text="productPrice"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#4d4d4d"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/productPrice_productPage_txt"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="490dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"/>
            <TextView
                    android:gravity="start"
                    android:paddingStart="30dp"
                    android:paddingEnd="50dp"
                    android:text="productTitle"
                    android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:textSize="25dp"
                    android:layout_width="329dp"
                    android:layout_height="64dp"
                    android:id="@+id/productTitle_productPage_txt"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="4dp"/>
            <ImageView
                    android:layout_width="389dp"
                    android:layout_height="240dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/product_productPage_img"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="227dp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginEnd="2dp"/>
            <Button
                    android:layout_marginTop="20dp"
                    android:text="add to cart"
                    android:textColor="@color/black"
                    android:background="@drawable/addtocart_btn"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/addToCart_productPage_btn"
                    android:layout_below="@+id/description_productPage_txt"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="47dp"
                    android:layout_marginStart="47dp"/>
            <Button
                    android:text="add to favorite"
                    android:textColor="@color/black"
                    android:background="@drawable/addtocart_btn"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/addToFavorite_productPage_btn"
                    android:layout_below="@+id/addToCart_productPage_btn"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginStart="47dp"/>
            <TextView
                    android:paddingTop="80dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:text="product_details"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:alpha="0.8"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description_productPage_txt"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/product_productPage_img"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-2dp"
                    android:layout_marginEnd="2dp"/>


        </RelativeLayout>

    </ScrollView>
    <include layout="@layout/actionbar"
             android:id="@+id/include4"/>
    <include layout="@layout/navigationbar"
             android:id="@+id/include2"/>


</RelativeLayout>