<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

    <ImageView
            android:layout_width="139dp"
            android:layout_height="141dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.04"/>
    <Button
            android:text="signUp"
            android:background="@drawable/bluebtndark"
            android:layout_width="186dp"
            android:layout_height="46dp"
            android:id="@+id/signUp_signUp_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.912"/>
    <EditText
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:hint=" Password"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/password_signUp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.698"
            app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:textSize="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:hint=" Name"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/username_signUp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.352"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintVertical_bias="0.542"/>
    <TextView
            android:text="Phone"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.432"/>
    <TextView
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintVertical_bias="0.316"/>
    <EditText
            android:textSize="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:inputType="textEmailAddress"
            android:hint=" Email"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/email_signUp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.582"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.654"/>
    <EditText
            android:textSize="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:inputType="phone"
            android:hint=" Phone"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/phone_signUp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.47"/>
    <TextView
            android:text="SignUp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.258"/>
    <TextView
            android:text="Birthday:"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintVertical_bias="0.755"/>
    <EditText
            android:textSize="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_width="301dp"
            android:layout_height="38dp"
            android:inputType="date"
            android:hint=" Birthday"
            android:ems="10"
            android:drawablePadding="5dp"
            android:id="@+id/birthDay_signUp_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.803"/>
    <ImageButton
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_edit_calendar_fill0_wght400_grad0_opsz48"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintVertical_bias="0.797"
            android:onClick="setDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>