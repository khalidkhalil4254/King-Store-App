<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="226dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/productpic_cartPage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="225dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="44dp"/>
        <TextView
                android:text="productType"
                android:textSize="14dp"
                android:textStyle="bold"
                android:alpha="0.5"
                android:textColor="@color/darkBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productType_cartPage"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="112dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="195dp"/>
        <TextView
                android:text="title"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productTitle_cartPage"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="171dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="193dp"/>
        <TextView
                android:text="price"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productPrice_cartPage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="195dp"
                android:layout_marginTop="65dp"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="96dp"
                android:layout_height="42dp"
                tools:srcCompat="@drawable/delete_icon"
                android:id="@+id/delete_cartPage_btn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:maxWidth="100dp" android:layout_alignParentBottom="true" android:layout_marginBottom="24dp"
                android:layout_marginTop="160dp" android:layout_marginStart="196dp" android:layout_marginEnd="119dp"/>
        <ImageButton android:layout_alignParentTop="true"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="23dp"
                     android:background="@drawable/remove_icon1"
                     android:id="@+id/remove_cartListView_btn"
                     android:layout_marginTop="125dp"
                     android:layout_marginEnd="190dp"
                     android:layout_marginStart="196dp"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="78dp"/>
        <ImageButton android:layout_alignParentTop="true"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="23dp"
                     android:background="@drawable/add_icon1"
                     android:id="@+id/add_cartListView_btn"
                     android:layout_marginTop="125dp"
                     android:layout_marginEnd="141dp"
                     android:layout_marginStart="245dp"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="78dp"/>
        <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:text="1"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:id="@+id/quantity_cartListItem_txt"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="126dp"
                android:layout_marginEnd="168dp"
                android:layout_marginStart="221dp"
                android:layout_marginBottom="80dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>